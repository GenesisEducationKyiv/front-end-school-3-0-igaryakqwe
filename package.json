{
  "name": "music-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^1.10.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "preview": "pnpm --filter ./apps/api... start && pnpm --filter ./apps/web... preview",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "proto:gen": "pnpm --filter @music-platform/grpc-client run proto:generate"
  }
}
